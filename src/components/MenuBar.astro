---
import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";
import "../styles/global.css";
---

<div class="flex items-center justify-center h-4 p-4 pt-8">
  <div class="px-4 relative flex w-full flex-col sm:flex-row">
    <div
      class="hidden sm:flex w-fit bg-[#f3f4f6] dark:bg-gray-800 rounded-2xl p-2 px-4 drop-shadow-lg text-sm sm:text-base flex-row items-center"
    >
      <a
      href="/"
      data-astro-prefetch
      class="dark:bg-white dark:text-transparent font-extrabold transition-all duration-300 ease-in hover:animate-pulse hover:bg-gradient-to-r hover:from-emerald-500 hover:to-green-500 hover:bg-clip-text hover:text-transparent [background-clip:text] mr-2"
      >
      Minecodes
      </a>
      <div class="flex items-center text-black dark:text-white">
      <Breadcrumbs linkTextFormat="capitalized" truncated={true}>
      <svg
      slot="index"
      aria-label="Home Page"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      >
      <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
      <polyline points="9 22 9 12 15 12 15 22"></polyline>
      </svg>
      <svg
      slot="separator"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-chevron-right-icon lucide-chevron-right"
      >
      <path d="m9 18 6-6-6-6"></path>
      </svg>
      <svg
      slot="ellipsis"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-ellipsis-icon lucide-ellipsis"
      >
      <circle cx="12" cy="12" r="1"></circle>
      <circle cx="19" cy="12" r="1"></circle>
      <circle cx="5" cy="12" r="1"></circle>
      </svg>
      </Breadcrumbs>
      </div>
    </div>
    <div
      class="mt-2 sm:mt-0 w-full sm:w-fit bg-[#f3f4f6] dark:bg-gray-800 rounded-2xl p-2 px-4 drop-shadow-lg text-sm sm:text-base flex justify-end sm:absolute sm:right-4"
    >
      <a
        class="p-1 mr-auto hover:text-emerald-500 transition-all duration-300 ease-in active:text-emerald-500 active:hover:text-black dark:text-white"
        href="/"
        data-astro-prefetch
        ><span class="sm:hidden font-extrabold">Minecodes</span><span
          class="hidden sm:inline">Home</span
        ></a
      >
      <a
        class="p-1 hover:text-emerald-500 transition-all duration-300 ease-in dark:text-white"
        href="/blog"
        data-astro-prefetch>Blog</a
      >
      <a
        class="p-1 hover:text-emerald-500 transition-all duration-300 ease-in dark:text-white"
        href="/about"
        data-astro-prefetch>About</a
      >
    </div>
  </div>
</div>
