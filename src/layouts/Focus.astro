---
import Layout from "./Layout.astro";
import "../styles/global.css";
import MenuBar from "../components/MenuBar.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="fixed top-0 left-0 w-full z-50">
    <MenuBar />
  </div>

  <div
    class="flex flex-col items-center justify-center min-h-screen bg-red-800 px-4"
  >
    <h1 class="text-4xl sm:text-6xl lg:text-9xl pt-20 sm:pt-32 lg:pt-50 pb-10 sm:pb-16 lg:pb-20 text-white font-[Josefin_Sans_Variable] text-center">
      {frontmatter.title}
    </h1>
    <article class="prose prose-sm sm:prose-base lg:prose-lg max-w-full sm:max-w-screen-md lg:max-w-screen-xl text-white pb-10 sm:pb-16 lg:pb-20 px-4">
      <slot />
    </article>
  </div>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
